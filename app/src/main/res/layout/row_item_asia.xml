<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
   android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_food_asia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/food"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/food_title_asia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Briand Restaurant"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:textColor="@color/Main2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_food_asia"
            />

        <TextView
            android:id="@+id/foodName_asia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicago Pizza"
            app:layout_constraintLeft_toRightOf="@id/img_food_asia"
            app:layout_constraintTop_toBottomOf="@id/food_title_asia"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imgRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"
            app:layout_constraintLeft_toRightOf="@id/img_food_asia"
            app:layout_constraintTop_toBottomOf="@id/foodName_asia"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            app:layout_constraintLeft_toRightOf="@id/imgRating"
            app:layout_constraintTop_toBottomOf="@id/foodName_asia"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgR"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/ic_round"
            app:layout_constraintLeft_toRightOf="@+id/tvRating"
            app:layout_constraintTop_toBottomOf="@id/foodName_asia"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            app:layout_constraintLeft_toRightOf="@id/imgR"
            app:layout_constraintTop_toBottomOf="@id/foodName_asia"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/imgR2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/ic_round"
            app:layout_constraintLeft_toRightOf="@+id/Rating"
            app:layout_constraintTop_toBottomOf="@id/foodName_asia"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="10dp"/>


<TextView
    android:id="@+id/food_price_asia"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="$6.05"
    android:textColor="@color/Main2"
    android:textSize="17sp"
    android:textStyle="bold"
    android:layout_margin="10dp"
    app:layout_constraintTop_toBottomOf="@id/foodName_asia"
    app:layout_constraintLeft_toRightOf="@id/imgR2"/>

        <ImageView
            android:id="@+id/img_sale"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sale"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Free\nShip"
            android:textColor="@color/white"
            android:textSize="7sp"
            app:layout_constraintTop_toTopOf="@id/img_sale"
            app:layout_constraintRight_toRightOf="@id/img_sale"
            app:layout_constraintLeft_toLeftOf="@id/img_sale"
            app:layout_constraintBottom_toBottomOf="@id/img_sale"
            android:layout_marginBottom="10dp"
            tools:layout_editor_absoluteX="126dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>